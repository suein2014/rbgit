<%= form_for(@article) do |f| %>

	<%= f.hidden_field 'title'%>
	<%= f.hidden_field 'keyword'%>
	<%= f.hidden_field 'content' %>
	<%= f.hidden_field 'source' %>
	<%=f.label :'若想重新分类，请选择:'%>
	<%= f.select :category ,Category.all.map {|c| [c.cn_name, c.name]},{include_blank: 'None'}, class:"form-control" %><br/>
	<%= f.submit '修改分类',:class=>"btn btn-primary"%>
	
<% end %>


