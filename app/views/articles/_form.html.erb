<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title  ,class:"form-control" %><br>
    <%= f.text_field :title ,class:"form-control"  %>
  </div>
  <div class="field">
    <%= f.label :keyword %><br>
    <%= f.text_field :keyword %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content ,rows:"10",class:"form-control"  %>
  </div>
  <div class="field">
    <%= f.label :source %><br>
	<%= f.radio_button  :source ,1,:checked=>true %> weibo
  </div>
  <br/>
  <div class="field">
    <%= f.label :category %><br>
	<%= f.select :category_id ,Category.all.map {|c| [c.cn_name, c.id]},{}, class:"form-control" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit '提交' %>
  </div>
<% end %>
